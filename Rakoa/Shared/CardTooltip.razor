<span class="my-tooltip">
    @if (UseCardImage)
    {
        <img class="card-image @ImageClass" src=@($"/rak_card_images/{CardName}.full.png")>
    }
    else
    {
        @CardName
    }
    <img class="hover-image" src=@($"/rak_card_images/{CardName}.full.png")>
</span>

@code {
    [Parameter]
    public string CardName { get; set; }

    [Parameter]
    public bool UseCardImage { get; set; }

    [Parameter]
    public string ImageClass { get; set; }
}